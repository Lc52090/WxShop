@import './style/icon.wxss';

page,
view,
text,
swiper,
swiper-item,
image,
navigator,
image {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 主题颜色 */
page {
  /*定义主题颜色*/
  --themeColor: #eb4450;
  /*定义统一字体大小*/
  font-size: 28rpx;
}

image {
  width: 100%;
}

button {
  margin: 0;
}
button:not([size='mini'])  {
  display: inline-block;
  padding: 0;
  font-weight: normal;  
  display: flex;
  justify-content: center;
  align-items: center;
}