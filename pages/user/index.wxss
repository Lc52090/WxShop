}
.user-content .user-main .history-wrap {
  display: flex;
}
.user-content .user-main .history-wrap navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.user-content .user-main .history-wrap navigator .his-num {
  color: var(--themeColor);
}
.user-content .user-main .orders-wrap {
  display: flex;
  flex-direction: column;
}
.user-content .user-main .orders-wrap .orders-title {
  color: 32rpx;
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
}
.user-content .user-main .orders-wrap .order-content {
  display: flex;
}
.user-content .user-main .orders-wrap .order-content navigator {
  flex: 1;
  text-align: center;
  margin-top: 10rpx;
}
.user-content .user-main .orders-wrap .order-content navigator .iconfont {
  color: var(--themeColor);
  color: 32rpx;
}
.user-content .user-main .address-wrap {
  margin-top: 20rpx;
  padding: 15rpx;
}
.user-content .user-main .appinfo-wrap {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0;
}
.user-content .user-main .appinfo-wrap navigator {
  border-bottom: 1px #ccc solid;
  padding: 10rpx 20rpx;
}
.user-content .user-main .appinfo-wrap > view {
  border-bottom: 1px #ccc solid;
  padding: 10rpx 20rpx;
}
.user-content .user-main .appinfo-wrap > view.appinfo-item {
  display: flex;
  justify-content: space-between;
}
.user-content .user-main .appinfo-wrap > view:last-of-type {
  border: none;
}
