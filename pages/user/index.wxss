.userinfo-wrap {
  height: 45vh;
  position: relative;
  overflow: hidden;
  background-color: var(--themeColor);
}
.userinfo-wrap .img-wrap > image {
  height: 50vh;
  filter: blur(10rpx);
}
.userinfo-wrap .img-wrap .user-info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 30%;
  text-align: center;
}
.userinfo-wrap .img-wrap .user-info .user-icon {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}
.userinfo-wrap .img-wrap .user-info .user-name {
  color: #ffffff;
  margin-top: 30rpx;
  font-size: 30rpx;
}
.userinfo-wrap .user-btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  border: 1px solid greenyellow;
  color: greenyellow;
  font-size: 38rpx;
  padding: 30rpx 60rpx;
  border-radius: 10rpx;
}
