.revice-address-row {
  padding: 15rpx;
  /* 获取地址按钮 */
  /* 地址信息 */
}
.revice-address-row .address-btn {
  padding: 20rpx;
}
.revice-address-row .address-btn button {
  width: 60%;
}
.revice-address-row .address-info {
  display: flex;
  justify-content: center;
  align-items: center;
}
.revice-address-row .address-info .userinfo {
  flex: 5;
  margin-right: 20rpx;
}
.revice-address-row .address-info .phone {
  flex: 2;
}
/* 购物车内容 */
.cart-content {
  border-top: 1px solid rgba(255, 0, 0, 0.705);
  padding-bottom: 100rpx;
  /* 购物车主要内容 */
}
.cart-content .cart-title {
  font-size: 32rpx;
  padding: 15rpx;
  border-bottom: 1px solid var(--themeColor);
}
.cart-content .cart-main {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.cart-content .cart-main .cart-item {
  display: flex;
  border-bottom: 1px solid #cccccc;
  /* 复选框结构 */
  /* 商品图片结构 */
  /* 商品信息结构 */
}
.cart-content .cart-main .cart-item .cart-chk-wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart-content .cart-main .cart-item .cart-img-wrap {
  flex: 3;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cart-content .cart-main .cart-item .cart-img-wrap image {
  width: 80%;
}
.cart-content .cart-main .cart-item .cart-info-wrap {
  flex: 7;
  padding: 0 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  /* 商品名称 */
  /* 商品价格 */
}
.cart-content .cart-main .cart-item .cart-info-wrap .goods-name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #666;
}
.cart-content .cart-main .cart-item .cart-info-wrap .goods-price-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cart-content .cart-main .cart-item .cart-info-wrap .goods-price-wrap .goods-price {
  font-size: 34rpx;
  color: var(--themeColor);
}
.cart-content .cart-main .cart-item .cart-info-wrap .goods-price-wrap .cart-num-tool {
  display: flex;
}
.cart-content .cart-main .cart-item .cart-info-wrap .goods-price-wrap .cart-num-tool view {
  width: 55rpx;
  height: 55rpx;
  line-height: 55rpx;
  text-align: center;
  border: 1px solid #cccccc;
}
.cart-content .cart-main .cart-item .cart-info-wrap .goods-price-wrap .cart-num-tool view.goods-num {
  border: none;
}
.cart-content .cart-main .empty {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 40%;
  margin-top: 100rpx;
}
.cart-content .cart-main .empty image {
  width: 100%;
}
.cart-content .cart-main .empty text {
  color: var(--themeColor);
}
/* 底部工具栏 */
.footer-tool {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  /* 结算 */
}
.footer-tool .all-chk-wrap {
  flex: 4;
}
.footer-tool .total-price-wrap {
  flex: 2;
  display: flex;
  flex-direction: column;
  margin-right: 10rpx;
  text-align: end;
}
.footer-tool .total-price-wrap text {
  color: var(--themeColor);
}
.footer-tool .total-price-wrap .car-text {
  font-size: 20rpx;
}
.footer-tool .order-pay-wrap {
  flex: 2;
  background-color: var(--themeColor);
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}
