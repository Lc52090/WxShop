page {
  padding-bottom: 90rpx;
}
.swiper-wrap swiper {
  height: 60vw;
  text-align: center;
}
.swiper-wrap swiper image {
  width: 60%;
}
/* 商品价格 */
.goods-price {
  padding: 15rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--themeColor);
}
/* 商品名称 */
.goods-name-row {
  display: flex;
  padding: 15rpx 0;
  border-bottom: 1px solid #dedede;
  border-top: 1px solid #dedede;
  /* 收藏 */
}
.goods-name-row .goods-name {
  flex: 5;
  color: #000000;
  font-size: 30rpx;
  padding: 0 10rpx;
  /* 超出2行省略号 */
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods-name-row .goods-collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #000000;
}
.goods-name-row .goods-collect .icon-Collection {
  color: red;
}
/* 商品信息 */
.goods-info .goods-info-title {
  font-size: 32rpx;
  color: var(--themeColor);
  font-weight: 600;
  padding: 20rpx;
}
/* 底部工具栏 */
.btm-tool {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background-color: #ffffff;
  width: 100%;
  height: 90rpx;
  border-top: 1px solid #cccccc;
}
.btm-tool .tool-item {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}
.btm-tool .tool-item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.btm-tool .btn-cart {
  flex: 2;
  background-color: #ffa500;
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;
}
.btm-tool .btn-buy {
  flex: 2;
  background-color: var(--themeColor);
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;
}
